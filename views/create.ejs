<!-- create new product body -->
    <div class="container my-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <a class="btn btn-sm btn-primary mb-3" href="/"> Back </a>
          <div class="card">
            <div class="card-header">
              <h2>Create new product </h2>
            </div>
            <div class="card-body">
              <form action="/product" enctype="multipart/form-data" method="POST">
                <div class="my-3">
                  <label for="">Product Name</label>
                  <input type="text" class="form-control" name="name">
                </div>
                <div class="my-3">
                  <label for="">Regular Price</label>
                  <input type="text" class="form-control" name="regularprice">
                </div>
                <div class="my-3">
                  <label for="">Sale Price</label>
                  <input type="text" class="form-control" name="saleprice">
                </div>
                <div class="my-3">
                  <label for="">Stock </label>
                  <input type="text" class="form-control" name="stock">
                </div>
                <div class="my-3">
                  <label for="">Photo </label>
                  <input type="file" class="form-control" name="productPhoto">
                </div>
                <div class="my-3">
                <button type="submit" class="btn btn-sm btn-success"> Create </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
































