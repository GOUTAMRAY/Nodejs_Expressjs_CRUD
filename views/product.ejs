<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <a class="btn btn-sm btn-primary mb-3" href="/create"> Add New Product </a>
      <div class="card">
        <div class="card-body">
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th> # </th>
                <th> Photo </th>
                <th> Name </th>
                <th>Regular Price </th>
                <th>Sale Price </th>
                <th> Stock </th>
                <th> Action </th>
              </tr>
            </thead>
            <tbody>
              <% products.forEach((item, index) => { %>
                <tr class="align-middle">
                  <td><%= index + 1 %></td>
                  <td>
                      <img style="height: 40px; width: 50px; object-fit: cover; border-radius: 5px;" src="/products/<%= item.photo  %>" alt="">
                  </td>
                  <td><%= item.name %> </td>
                  <td><%= item.regularprice %> $</td>
                  <td><%= item.saleprice %> $</td>
                  <td><%= item.stock %></td>
                  <td> 
                    <a class="btn btn-sm btn-info" href="/single/<%= item.slug %>"><i class="fa fa-eye"></i></a>

                    <a class="btn btn-sm btn-warning"  href="/edit/<%= item.id %>"><i class="fa fa-edit"></i></a>
                    
                    <a class="btn btn-sm btn-danger"  href="/product-delete/<%= item.id %>"><i class="fa fa-trash"></i></a>
                  </td>
                 </tr>
              <% }) %>
            
              
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

