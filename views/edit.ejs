<!-- edit product body -->
<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <a class="btn btn-sm btn-primary mb-3" href="/"> Back </a>
      <div class="card">
        <div class="card-header">
          <h2> Update product </h2>
        </div>
        <div class="card-body">
          <form action="/update/<%= product.id %>" enctype="multipart/form-data" method="POST">
            <div class="my-3">
              <label for="">Product Name</label>
              <input type="text" class="form-control" name="name" value="<%= product.name  %>">
            </div>
            <div class="my-3">
              <label for="">Regular Price</label>
              <input type="text" class="form-control" name="regularprice" value="<%= product.regularprice  %>" >
            </div>
            <div class="my-3">
              <label for="">Sale Price</label>
              <input type="text" class="form-control" name="saleprice" value="<%= product.saleprice  %>">
            </div>
            <div class="my-3">
              <label for="">Stock </label>
              <input type="text" class="form-control" name="stock" value="<%= product.stock  %>">
            </div>
            <div class="my-3">
              <img style="height: 100px; width: 100px; object-fit: cover; border-radius: 20px;" src="/products/<%= product.photo %>" alt="">
            </div>
            <div class="my-3">
              <label for="">Photo </label>
              <input type="file" class="form-control" name="productPhoto">
            </div>
            <div class="my-3">
            <button type="submit" class="btn btn-sm btn-success"> Create </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
















































